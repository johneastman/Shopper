<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/shopping_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- This image button is purely for aesthetics, so if the user clicks on
    the ImageButton in the recyclerview row, we want the selected shopping list to
    be opened. We achieve this by setting android:clickable="false" -->
    <ImageButton
        android:id="@+id/navigate_to_list_icon"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"/>

</RelativeLayout>
